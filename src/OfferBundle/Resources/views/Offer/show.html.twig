{% extends "::base.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-xs-12 col-sm-8">
            <div class="blog-wrapper blog-list">

                <div class="blog-post be-large-post">
                    <div class="info-block clearfix">
                        <div class="be-large-post-align">
                            {#<span><i class="fa fa-thumbs-o-up"></i> 253</span>#}
                            {#<span><i class="fa fa-eye"></i> 753</span>#}
                            {#<span><i class="fa fa-comment-o"></i> 50</span>#}
                        </div>
                    </div>
                    <div class="be-large-post-align">
                        <h3 class="be-post-title">
                            {{ offer.title }}
                        </h3>

								<span class="be-text-tags clearfix">
									<div class="post-date">
                                        <i class="fa fa-clock-o"></i> {{ offer.creationDate|date }}
                                    </div>
									<div class="author-post">
                                        <img src="{{ vich_uploader_asset(offer,'imageFile') }}" alt=""
                                             class="ava-author">
                                        <span>by <a href="blog-detail-2.html">{{ offer.user.username }}</a></span>
                                    </div>
								</span>
                        <div class="clear"></div>
                    </div>
                    <div class="post-preview  be-large-post-slider">
                        <img class="img-responsive img-full" src="{{ vich_uploader_asset(offer,'imageFile') }}" alt="">
                    </div>
                </div>
            </div>
        </div>


        <div class="col-xs-12 col-sm-4">
            <div class="blog-wrapper blog-list">

                <div class="blog-post be-large-post" style="padding-bottom: 0px">
                    <div class="info-block clearfix">
                        <div class="be-large-post-align">
                            {#<span><i class="fa fa-thumbs-o-up"></i> 253</span>#}
                            {#<span><i class="fa fa-eye"></i> 753</span>#}
                            {#<span><i class="fa fa-comment-o"></i> 50</span>#}
                        </div>
                    </div>
                    <div class="be-large-post-align">
                        <div class="blog-content be-large-post-align">
                            <button class="btn btn-lg btn-success">Order ( {{ offer.price }})</button>
                            <label>Quantity : </label><input class="form-input" type="number" name="quantity">
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
            <div style="margin-top:10px;" class="clear"></div>
            <div class="blog-wrapper blog-list">

                <div class="blog-post be-large-post" style="padding-bottom: 0px">
                    <div class="info-block clearfix">
                        <div class="be-large-post-align">
                            {#<span><i class="fa fa-thumbs-o-up"></i> 253</span>#}
                            {#<span><i class="fa fa-eye"></i> 753</span>#}
                            {#<span><i class="fa fa-comment-o"></i> 50</span>#}
                        </div>
                    </div>
                    <div class="be-large-post-align">
                        <h3>About {{ offer.user.username }}</h3>
                        <div class="blog-content be-large-post-align">
                            <button class="btn btn-lg btn-success">Order ( {{ offer.price }})</button>
                            <label>Quantity : </label><input class="form-input" type="number" name="quantity">
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>


        <div style="margin-top:10px;" class="clear"></div>
        <div class="col-xs-12 col-sm-8">
            <div class="blog-wrapper blog-list">

                <div class="blog-post be-large-post">
                    <div class="info-block clearfix">
                        <div class="be-large-post-align">
                            {#<span><i class="fa fa-thumbs-o-up"></i> 253</span>#}
                            {#<span><i class="fa fa-eye"></i> 753</span>#}
                            {#<span><i class="fa fa-comment-o"></i> 50</span>#}
                        </div>
                    </div>
                    <div class="be-large-post-align">
                        <h3 class="be-post-title">
                            About this offer
                        </h3>
                        <div class="blog-content be-large-post-align">
                            <div class="post-text ">
                                <p>{{ offer.description }}</p>
                            </div>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}