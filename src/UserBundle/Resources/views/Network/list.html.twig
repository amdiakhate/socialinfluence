{% extends "::base.html.twig" %}

{% block body %}
    <div class="row">
        <h3>My Networks</h3>
        <div class="row">
            <a class="waves-effect waves-light btn" href="{{ path('user_addNetwork') }}"><i class="material-icons left">add</i>button</a>

        </div>
        <table>
            <th>Type</th>
            <th>Username</th>
            <th>Link</th>
            {% for network in networks %}
                <tr>
                  <td>{{ network.type|capitalize }}</td>
                    <td>{{ network.username }}</td>

                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}